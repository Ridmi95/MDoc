        android:layout_marginEnd="@dimen/appupdatemarginend"
        android:background="@drawable/button_rounded"
        android:text="@string/update"
        android:textColor="@color/textIcon"
        android:textSize="@dimen/Btextsize" />-->

    <Button
        android:id="@+id/Viewappointment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Bheight"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/button_rounded"

        android:text="View appointment"
        android:textColor="@color/textIcon"
        android:textSize="20sp"
        />

