<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".listOfDoc">
// add padding 30dp

    <TextView
        android:background="@color/colorPrimaryDark"
        android:id="@+id/Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/list_of_doctors"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/textIcon"
        android:textSize="@dimen/listtexttextsize"
        android:paddingTop="@dimen/listtextpaddingtop"
        android:paddingBottom="15dp"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/listimageheight"
        android:padding="@dimen/listimagepadding"
        android:src="@drawable/lab6" />

    <SearchView
        android:id="@+id/Doclist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search Here"
        android:iconifiedByDefault="false"
        >
    </SearchView>


    <ListView
        android:id="@+id/listodoc"

        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>


</LinearLayout>